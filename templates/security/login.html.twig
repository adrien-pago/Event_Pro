{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h1 class="auth-title">Connexion</h1>
        </div>
        <div class="auth-body">
            {% if error %}
                <div class="auth-alert">
                    {% if error.messageKey == 'Invalid credentials.' %}
                        Email ou mot de passe incorrect.
                    {% else %}
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    {% endif %}
                </div>
            {% endif %}

            <form method="post" class="auth-form">
                <div class="form-group">
                    <label for="inputUsername" class="form-label">Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="inputUsername" class="form-control" required autofocus>
                </div>

                <div class="form-group">
                    <label for="inputPassword" class="form-label">Mot de passe</label>
                    <input type="password" name="_password" id="inputPassword" class="form-control" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="auth-button" type="submit">
                    Se connecter
                </button>
            </form>

            <a href="{{ path('app_register') }}" class="auth-link">
                Pas encore de compte ? Inscrivez-vous
            </a>
        </div>
    </div>
</div>
{% endblock %} 