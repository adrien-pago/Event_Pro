{% extends 'base.html.twig' %}

{% block title %}Modifier l'événement : {{ event.eventName }}{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header">
                    <h1 class="h3 mb-0 text-center font-weight-light">Modifier l'événement</h1>
                </div>
                <div class="card-body p-5">
                    
                    {{ form_start(form) }}

                    {{ form_row(form.clientName) }}
                    {{ form_row(form.eventName) }}
                    {{ form_row(form.eventDate) }}

                    {% if event.googleCalendarEventId %}
                        <div class="alert alert-success d-flex align-items-center" role="alert">
                            <i class="bi bi-cloud-check-fill me-2"></i>
                            <div>
                                Cet événement est synchronisé avec Google Calendar. Les modifications seront également appliquées sur votre calendrier.
                            </div>
                        </div>
                    {% endif %}

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">Enregistrer les modifications</button>
                    </div>

                    {{ form_end(form) }}

                </div>
                <div class="card-footer text-center py-3">
                    <a href="{{ path('app_events') }}">Retour à la liste</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
// Validation du formulaire
(function() {
    'use strict';
    window.addEventListener('load', function() {
        var forms = document.getElementsByClassName('needs-validation');
        var validation = Array.prototype.filter.call(forms, function(form) {
            form.addEventListener('submit', function(event) {
                if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    }, false);
})();
</script>
{% endblock %} 